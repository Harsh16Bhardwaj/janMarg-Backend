{
  "name": "janmargbackend",
  "version": "1.0.0",
  "description": "JanMarg - Civic Issue Reporting Backend",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "build": "prisma generate && npm run create-netlify-function",
    "create-netlify-function": "node scripts/create-netlify-function.js",
    "dev": "nodemon server.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "node scripts/seed.js",
    "db:reset": "prisma db push --force-reset && npm run db:seed",
    "postinstall": "prisma generate"
  },
  "keywords": [
    "civic",
    "issues",
    "government",
    "jharkhand"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "firebase": "^12.2.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "prisma": "^6.15.0",
    "serverless-http": "^3.2.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
